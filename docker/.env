# 服务器配置（必须）
SERVER_PUBLIC_URL=http://localhost:8080

# 设备平台配置（必须）- 开发环境可以先用假地址
DEVICE_PLATFORM_URL=http://192.168.1.100:8080
DEVICE_PLATFORM_TIMEOUT=10
DEVICE_PLATFORM_RETRY=3

# Kafka配置（必须）- 开发环境可以先用假地址
KAFKA_BOOTSTRAP_SERVERS=192.168.1.200:9092
KAFKA_TOPIC=event-alarm
KAFKA_ENABLED=false

# 日志配置
LOG_LEVEL=INFO
